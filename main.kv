            color: 0.96, 0.39, 0.02, 1
        BoxLayout:
            orientation: 'vertical'
            id: puntajes
            Label:
                text: "Lista de puntajes:"
                font_size: app.font_general_a
        Button:
            size_hint: 1, .4
