<MenuPrincipal>:
    name: 'Menu'
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 20
        canvas:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'sprites/Base_pyCacho.png'
        Image:
            source: 'sprites/logo_menu.png'
            pos_hint: {'center_y':0.5,'center_x':0.5}
            size_hint: 4.5,4.5
        Button:
            ##font_name: 'fonts/Titillium_Web/TitilliumWeb-SemiBold.ttf'
            font_size: app.font_general_a
            text: 'Cacho Alalay'
            background_normal: 'sprites/button_lila_1.png'
            background_down: 'sprites/button_lila_1_down.png'
            on_release: app.root.current = 'Jugadores'
        Button:
            #font_name: 'fonts/Titillium_Web/TitilliumWeb-SemiBold.ttf'
            font_size: app.font_general_a
            text: 'Online (En construcción)'
            background_normal: 'sprites/button_lila_2.png'
            background_down: 'sprites/button_lila_2_down.png' 
        
        Button:
            #font_name: 'fonts/Titillium_Web/TitilliumWeb-SemiBold.ttf'
            font_size: app.font_general_a
            text: 'Solo (En construcción)'
            background_normal: 'sprites/button_lila_3.png'
            background_down: 'sprites/button_lila_3_down.png'      

    
        Button:
            #font_name: 'fonts/Titillium_Web/TitilliumWeb-SemiBold.ttf'
            font_size: app.font_general_a
            text: 'Configuración'

            background_normal: 'sprites/button_azul_1.png'
            background_down: 'sprites/button_azul_1_down.png'
 
        Label:
            height: 50
            size_hint_y: None  
         

<JugadoresScreen>:
    name: 'Jugadores'
    scrollJugadores: scrollJugadores
    listaJugadores: listaJugadores
    BoxLayout:
        orientation: 'vertical'
        canvas:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'sprites/Base_pyCacho.png'

        Label:
            text:'¿Quiénes jugaran?'
            size_hint: 1,.2
            font_size: app.font_general_a
            #font_name: 'fonts/Titillium_Web/TitilliumWeb-SemiBold.ttf'
        ScrollView:
            id: scrollJugadores
            GridLayout:
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                id: listaJugadores
                padding: 50
                spacing: 20


        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .3
            padding: 10

            Button:
                #font_name: 'fonts/Titillium_Web/TitilliumWeb-SemiBold.ttf'
                font_size: app.font_general_a
                text: 'Añadir Jugador'
                background_normal: 'sprites/button_lila_1.png'
                background_down: 'sprites/button_lila_1_down.png'
                on_press: root.añadir_jugador(0)
            Button:
                #font_name: 'fonts/Titillium_Web/TitilliumWeb-SemiBold.ttf'
                font_size: app.font_general_a
                text: '¡Jugar!'
                background_normal: 'sprites/button_naranja.png'
                background_down: 'sprites/button_naranja_down.png'
                on_press: app.root.current = 'Turno'
        Label:
            size_hint: 1, 0.7


<TurnoScreen>:
    name: 'Turno'
    turnoDe: turnoDe
    BoxLayout:
        orientation: 'vertical'
        spacing:120
        padding:120
        canvas:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'sprites/Base_pyCacho.png'

        Label:
            id: turnoDe
            size_hint: 1,.9
            font_size: app.font_general_a + suma_font
            #font_name: 'fonts/Titillium_Web/TitilliumWeb-SemiBold.ttf'
        Button:
            size_hint: 1, .2
            pos_hint: {'center_y':0.5,'center_x':0.5}
            #font_name: 'fonts/Titillium_Web/TitilliumWeb-SemiBold.ttf'
            font_size: app.font_general_a
            text: '¡Listo!'
            background_normal: 'sprites/button_lila_1.png'
            background_down: 'sprites/button_lila_1_down.png'
            on_press: app.root.current = 'Lanzar'

<GanadorScreen>:
    name: 'Ganador'
    ganador: ganador
    puntajes: puntajes
    BoxLayout:
        orientation: 'vertical'
        spacing:120
        padding:120
        canvas:
            Rectangle:
                pos: self.pos
                size: self.size
