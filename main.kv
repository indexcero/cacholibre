<LanzarWidget>
    name: 'Lanzar'
    orientation: 'vertical'

    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'sprites/Base_pyCacho.png'
    BoxLayout:
        orientation: 'vertical'
        spacing: 30
        padding: 30
        CachoWidget:
            id : vaso_cacho
        Button:
            text: 'Lanzar'
            #font_name: 'fonts/Titillium_Web/TitilliumWeb-SemiBold.ttf'
            size_hint: 0.6,0.2
            font_size: app.font_general_a
            pos_hint: {'center_y':0,'center_x':0.5}
            background_normal: 'sprites/button_lila_1.png'
            background_down: 'sprites/button_lila_1_down.png'
            on_press: root.lanzar()
            on_release: app.root.current = 'Lanzada'

<ImagenDado>:
    # each time a picture is created, the image can delay the loading
    # as soon as the image is loaded, ensure that the center is changed
    # to the center of the screen.
    on_size: self.center = win.Window.center
    size: image.size
    size_hint: None, None

    Image:
        id: image
        source: root.source
        # create initial image to be 400 pixels width
        size: app.dado_size_a , app.dado_size_a





<LanzadaScreen>
    name: 'Lanzada'
    campo: campo
    botones: botones
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'sprites/Base_pyCacho.png'
    Image:
        source: 'sprites/vaso_volcado.png'
        pos: root.width * 0.005, root.height * 0.5
    FloatLayout:
        id: campo

  
    BoxLayout:
        id: botones
        orientation: 'vertical'
        size_hint: 1, 0.3
        spacing: 2
        padding: 5
        Button:
            text: 'Anotar'
            #font_name: 'fonts/Titillium_Web/TitilliumWeb-SemiBold.ttf'
            font_size: app.font_general_a
            background_normal: 'sprites/button_lila_1.png'
            background_down: 'sprites/button_lila_1_down.png'
            on_release: app.root.current = 'Anotar'

        Button:
            text: 'Cambiar dados'
            #font_name: 'fonts/Titillium_Web/TitilliumWeb-SemiBold.ttf'
            font_size: app.font_general_a
            background_normal: 'sprites/button_naranja.png'
            background_down: 'sprites/button_naranja_down.png'
            on_release: app.root.current = 'Cambiar'



<CambiarScreen>
    name: 'Cambiar'
    campo: campo
    botones: botones
    dados_seleccionados: dados_seleccionados
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'sprites/Base_pyCacho.png'
    Image:
        source: 'sprites/vaso_volcado.png'
        pos: root.width * 0.005, root.height * 0.5
    
    BoxLayout:
        orientation: 'vertical'
        FloatLayout:
            id: campo
            Label:
                text: 'Selecciona los dados que quieres cambiar.'
                color: 1,1,1,1
                font_size: app.font_general_a
                text_size: root.size
                pos_hint: {'center_y':0,'center_x':0.2}
                #font_name: 'fonts/Titillium_Web/TitilliumWeb-SemiBold.ttf'
        BoxLayout:
            id: dados_seleccionados
            orientation: 'horizontal'
            size_hint: 1,0.25
    
        BoxLayout:
            id: botones
            orientation: 'vertical'
            size_hint: 1, 0.3
            spacing: 4
            padding: 4
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'Volver a lanzar'
                    #font_name: 'fonts/Titillium_Web/TitilliumWeb-SemiBold.ttf'
                    font_size: app.font_general_a
                    background_normal: 'sprites/button_lila_1.png'
                    background_down: 'sprites/button_lila_1_down.png'
                    on_release: root.relanzar()
                Button:
                    text: 'Volcar'
                    #font_name: 'fonts/Titillium_Web/TitilliumWeb-SemiBold.ttf'
                    font_size: app.font_general_a
                    background_normal: 'sprites/button_naranja.png'
                    background_down: 'sprites/button_naranja_down.png'
                    on_release: root.volcar()           
            Button:
                text: 'Cancelar'
                #font_name: 'fonts/Titillium_Web/TitilliumWeb-SemiBold.ttf'
                height: 15
                font_size: app.font_general_a
                background_normal: 'sprites/button_naranja.png'
                background_down: 'sprites/button_naranja_down.png'
                on_release: app.root.current = 'Anotar'

